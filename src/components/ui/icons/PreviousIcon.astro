---
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const { href } = Astro.props;

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

---

<div class="flex">
  <!-- Previous Button -->
  <a
    href={href}
    class="flex items-center justify-center px-3 h-8 mr-3 text-sm font-medium rounded-lg text-blue-400 hover:text-blue-500"
    aria-label="Display newer articles"
  >
    <svg
      class="w-3.5 h-3.5 mr-2"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 10"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M13 5H1m0 0 4 4M1 5l4-4"></path>
    </svg>
     {t("PreviousIcon")}
  </a>
</div>
