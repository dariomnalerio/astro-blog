---
import PostHeader from "../components/posts/PostHeader.astro";
import PostSuggestionsList from "../components/posts/PostSuggestionsList.astro";
import { getSortedBlogPosts } from "../utils/contentCollections";
import Layout from "./Layout.astro";
import { getLangFromUrl } from "../i18n/utils";


const { frontmatter } = Astro.props;

const { title, pubDate, image, author, authorLink, fileName, description } =
  frontmatter;

// Get all posts for suggestions
const lang = getLangFromUrl(Astro.url);
const posts = await getSortedBlogPosts(lang);
const postsMetadata = posts.map((post) => post.data);
---

<Layout title={title} description={description}>
  <div class="lg:mx-20 xl:mx-28 2xl:mx-28">
    <PostHeader
      title={title}
      fileName={fileName}
      description={description}
      pubDate={pubDate}
      author={author}
      authorLink={authorLink}
      image={image}
    />

    <div class="content">
      <slot />
    </div>
  </div>

  <div class="mt-20">
    <PostSuggestionsList
      currentFrontmatter={frontmatter}
      allFrontmatters={postsMetadata}
    />
  </div>
</Layout>

<style>
  .content :global(h2, h3, h4) {
    letter-spacing: 0.5px;
    margin: 1.5rem 0;
    color: rgb(203 213 225);
  }
  .content :global(h2) {
    font-weight: 700;
    font-size: 1.5rem;
  }
  .content :global(h3) {
    font-weight: 700;
    font-size: 1.25rem;
  }
  .content :global(h4) {
    font-weight: 700;
    font-size: 1rem;
  }
  .content :global(p) {
    color: rgb(203 213 225);
    letter-spacing: 0.3px;
    margin: 1.5rem 0;
  }

  .content :global(pre) {
    margin: 1.5rem 0;
  }
  .content :global(img) {
    max-width: 50%;
    height: auto;
  }
  .content :global(ul) {
    list-style-type: disc;
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }
  .content :global(ol) {
    list-style-type: decimal;
    margin: 1.5rem 0;
    padding-left: 1.5rem;
  }
  .content :global(li) {
    color: rgb(203 213 225);
    letter-spacing: 0.3px;
    margin: 0.5rem 0;
  }
</style>
